@model IEnumerable<AESManagement.AESDataService.Position>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Position #
        </th>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Education
        </th>
        <th>
            Requirements
        </th>
        <th>
            Hourly Pay
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.positionId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.education)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.requirements)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pay)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.positionId })
        </td>
    </tr>
}

</table>
