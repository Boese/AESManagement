@model AESManagement.AESDataService.ApplicantApp
@{
    if (Model.personalInfo != null)
    {
        <div class="row">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    Applicant : @Model.personalInfo.firstName @Model.personalInfo.lastName<br />
                    Status : @this.Session["_Status"]
                </div>
            </div>
        </div>
        
        AESManagement.Models.NoteModel temp = new AESManagement.Models.NoteModel();
        temp.appId = Model.personalInfo.applicantId;
        temp.note = Model.notes;

        <div class="row">
            @Html.Partial("~/Views/Application/EditNotes.cshtml",temp)
        </div>
    <br />
    <hr />
<div class="panel panel-success">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-8">
                Personal Info
            </div>
            <div class="col-md-3">
                <div class="row">
                    <div class="col-md-6">
                        @using (Html.BeginForm("Approve", "Application", FormMethod.Post))
                        {
                            @Html.HiddenFor(model => model.personalInfo.applicantId, new { @Name = "appId"})
                                <button class="btn btn-primary btn-sm" type="submit">
                                    <span class="glyphicon glyphicon-ok"></span> Approve
                                </button>
                        }
                    </div>
                    <div class="col-md-6">
                        @using (Html.BeginForm("Deny", "Application", FormMethod.Post))
                        {
                            @Html.HiddenFor(model => model.personalInfo.applicantId, new { @Name = "appId" })
                            <button class="btn btn-danger btn-sm" type="submit">
                                <span class="glyphicon glyphicon-remove"></span> Deny
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                @Html.Label("Name (First, MI, Last): ")
                @Html.DisplayFor(m => m.personalInfo.firstName)
                @Html.DisplayFor(m => m.personalInfo.middleName)
                @Html.DisplayFor(m => m.personalInfo.lastName)
            </div>
            <div class="col-md-6">
                @Html.Label("Social Security Number: ")
                @{ string ssn;
                   ssn = "*****" + Model.personalInfo.socialNum.Substring(5); }
                @Html.DisplayFor(m => ssn)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.Label("Address (Street, City, State, Zip): ")
                @Html.DisplayFor(m => m.personalInfo.street)
                @Html.DisplayFor(m => m.personalInfo.city)
                @Html.DisplayFor(m => m.personalInfo.state)
                @Html.DisplayFor(m => m.personalInfo.zip)
            </div>
            <div class="col-md-6">
                @Html.Label("Phone: ")
                @Html.DisplayFor(m => m.personalInfo.Phone)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.Label("Email Address: ")
                @Html.DisplayFor(m => m.personalInfo.email)
            </div>
            <div class="col-md-6">
                @Html.Label("Aliases: ")
                @Html.DisplayFor(m => m.personalInfo.alias)
            </div>
        </div>
    </div>
</div>

<div class="panel panel-success">
    <div class="panel-heading">Availability</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                @Html.Label("Positions Applying for: ")
                @Html.DisplayFor(m => m.jobsApplied)
            </div>
            <div class="col-md-4">
                @Html.Label("Salary Expectation: ")
                @Html.DisplayFor(m => m.availability.salaryExpected)
            </div>
            <div class="col-md-4">
                @Html.Label("Full Time: ")
                @Html.DisplayFor(m => m.availability.fullTimeYN)
            </div>
        </div>
        <div class="row">
            <hr />
            <div class="col-md-6">
                <h5><b>Availability Schedule: </b></h5>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Mon</th>
                    <th>Tue</th>
                    <th>Wed</th>
                    <th>Thu</th>
                    <th>Fri</th>
                    <th>Sat</th>
                    <th>Sun</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(m => m.availability.mondayFrom) - @Html.DisplayFor(m => m.availability.mondayTo)</td>
                    <td>@Html.DisplayFor(m => m.availability.tuesdayFrom) - @Html.DisplayFor(m => m.availability.tuesdayTo)</td>
                    <td>@Html.DisplayFor(m => m.availability.wednesdayFrom) - @Html.DisplayFor(m => m.availability.wednesdayTo)</td>
                    <td>@Html.DisplayFor(m => m.availability.thursdayFrom) - @Html.DisplayFor(m => m.availability.thursdayTo)</td>
                    <td>@Html.DisplayFor(m => m.availability.fridayFrom) - @Html.DisplayFor(m => m.availability.fridayTo)</td>
                    <td>@Html.DisplayFor(m => m.availability.saturdayFrom) - @Html.DisplayFor(m => m.availability.saturdayTo)</td>
                    <td>@Html.DisplayFor(m => m.availability.sundayFrom) - @Html.DisplayFor(m => m.availability.sundayTo)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="panel panel-success">
    <div class="panel-heading">Job History</div>
    <div class="panel-body">
        @foreach (var x in Model.jobHistory)
        {
            if (x.employer != null)
            {
                <div class="row">
                    <h4><b>Employer</b></h4>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.Label("Employer:")
                            @Html.DisplayFor(m => x.employer)
                        </div>
                        <div class="col-md-6">
                            @Html.Label("From (mo/yr):")
                            @Html.DisplayFor(m => x.fromDate)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.Label("Address (Street, City, State, Zip):")
                            @Html.DisplayFor(m => x.street)
                            @Html.DisplayFor(m => x.city)
                            @Html.DisplayFor(m => x.stateAbrev)
                            @Html.DisplayFor(m => x.zip)
                        </div>
                        <div class="col-md-6">
                            @Html.Label("To (mo/yr):")
                            @Html.DisplayFor(m => x.toDate)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.Label("Phone:")
                            @Html.DisplayFor(m => x.phone)
                        </div>
                        <div class="col-md-6">
                            @Html.Label("Supervisor:")
                            @Html.DisplayFor(m => x.supervisor)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.Label("Position:")
                            @Html.DisplayFor(m => x.position)
                        </div>
                        <div class="col-md-6">
                            @Html.Label("Starting salary:")
                            @Html.DisplayFor(m => x.startSalary)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.Label("Ending salary:")
                            @Html.DisplayFor(m => x.endSalary)
                        </div>
                        <div class="col-md-6">
                            @Html.Label("Reason for leaving:")
                            @Html.DisplayFor(m => x.reasonLeave)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.Label("Describe your responsibilities:")
                            @Html.DisplayFor(m => x.duties)
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<div class="panel panel-success">
    <div class="panel-heading">Education</div>
    <div class="panel-body">
        @foreach (var x in Model.education)
        {
            if (x.name != null)
            {
                <div class="row">
                    <h4><b>Education </b></h4>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.Label("Name and address of school:")
                            @Html.DisplayFor(m => x.name)
                            @Html.DisplayFor(m => x.street)
                            @Html.DisplayFor(m => x.city)
                            @Html.DisplayFor(m => x.stateAbrev)
                            @Html.DisplayFor(m => x.zip)
                        </div>
                        <div class="col-md-6">
                            @Html.Label("Years attended:")
                            @Html.DisplayFor(m => x.yearFrom)
                            @Html.DisplayFor(m => x.yearTo)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.Label("Graduated (y/n):")
                            @Html.DisplayFor(m => x.graduatedYN)
                        </div>
                        <div class="col-md-6">
                            @Html.Label("Degree/major:")
                            @Html.DisplayFor(m => x.degreeMajor)
                        </div>
                    </div>
                </div>
            }
            
        }
    </div>
</div>

<div class="panel panel-success">
    <div class="panel-heading">References</div>
    <div class="panel-body">
        @foreach (var x in Model.reference)
        {
            if (x.name != null)
            {
                <div class="row">
                    <h4><b>Reference</b></h4>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.Label("Name: ")
                            @Html.DisplayFor(m => x.name)
                        </div>
                        <div class="col-md-6">
                            @Html.Label("Phone: ")
                            @Html.DisplayFor(m => x.phone)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.Label("Company: ")
                            @Html.DisplayFor(m => x.company)
                        </div>
                        <div class="col-md-6">
                            @Html.Label("Title: ")
                            @Html.DisplayFor(m => x.title)
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
        }
        else{
        <div class="row-fluid">
            <div class="jumbotron text-center" style="background-color: #C0C0C0; ">
                <h2><span class="glyphicon glyphicon-hand-up"> </span>Select an applicant to view</h2>
            </div>
        </div>
             }
    }

